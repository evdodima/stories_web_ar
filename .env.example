# WebAR WASM Environment Configuration
# Copy this file to .env and customize for your environment

# Build Configuration
EMSCRIPTEN_PATH=/path/to/emsdk
OPENCV_PATH=./wasm/opencv

# Server Configuration
PORT=8000
HOST=localhost

# WASM Configuration
INITIAL_MEMORY=67108864  # 64MB
MAXIMUM_MEMORY=268435456  # 256MB

# Performance Tuning
DEFAULT_DETECTION_INTERVAL=15
DEFAULT_MAX_FEATURES=800
DEFAULT_MAX_TRACKING_POINTS=100

# Debug Mode (set to 1 to enable debug build)
DEBUG_BUILD=0
ENABLE_ASSERTIONS=0
ENABLE_SAFE_HEAP=0

# Target Database
TARGET_DATABASE_PATH=./target_database.json

# Video Configuration
MAX_FRAME_DIMENSION=640
DEFAULT_FACING_MODE=environment
